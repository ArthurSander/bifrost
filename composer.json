{
  "name": "bridit/bifrost",
  "description": "The Bifrost add-on to Laravel Framework",
  "keywords": [
    "bridit",
    "laravel",
    "bifrost"
  ],
  "homepage": "https://github.com/bridit/bifrost",
  "license": "MIT",
  "authors": [
    {
      "name": "Gustavo Siqueira",
      "email": "gus@brid-it.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "asm89/stack-cors": "^2.0",
    "bridit/bifrost-database": "^2.0",
    "bridit/laravel-tasks": "^2.1",
    "fideloper/proxy": "^4.4",
    "guzzlehttp/guzzle": "^7.0",
    "laravel/framework": "^8.0",
    "ramsey/uuid": "^4.1",
    "spatie/laravel-fractal": "^5.8",
    "spatie/laravel-query-builder": "^3.3",
    "spatie/laravel-responsecache": "^7.0",
    "spatie/laravel-schemaless-attributes": "^2.0"
  },
  "require-dev": {
    "facade/ignition": "^2.8",
    "laravel/tinker": "^2.6",
    "mockery/mockery": "^1.4",
    "phpunit/phpunit": "^9.5"
  },
  "replace": {
    "bridit/bifrost-support": "^5.0"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "Bifrost\\Providers\\BifrostServiceProvider"
      ],
      "dont-discover": []
    }
  },
  "autoload": {
    "psr-4": {
      "Bifrost\\": "src"
    },
    "files": [
      "src/Support/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Bifrost\\Tests\\": "tests/"
    },
    "files": []
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  }
}
